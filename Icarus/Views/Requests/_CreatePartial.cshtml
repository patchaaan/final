@model Icarus.Models.tblRequest

<script>
    $(document).ready(function () {
        $(".cancelButton").on("click", function () {
            $(".modal-dialog").find('form').trigger('reset');
        });
        $(".close").on("click", function () {
            $(".modal-dialog").find('form').trigger('reset');
        });
    });
</script>

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title" id="myModalLabel">Create Request</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        @using (Html.BeginForm("Create", "Requests", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IDRequest)
        <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form">
                <div class="form-row">
                    <div class="form-group col-sm-4">
                        <label><b>Date Requested <span style="color:red;">*</span></b></label>
                        @Html.TextBoxFor(model => model.DateRequest, new { @type = "date", @class = "form-control datetimepicker", Required = true })
                    </div>
                    <div class="form-group col-sm-4">
                        <label><b>Date Needed</b></label>
                        @Html.TextBoxFor(model => model.DateNeeded, new { @type = "date", @class = "form-control datetimepicker" })
                    </div>
                    <div class="form-group col-sm-4">
                        <label><b>Date Approved</b></label>
                        @Html.TextBoxFor(model => model.DateApproved, new { @type = "date", @class = "form-control datetimepicker" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-4">
                        <label><b>Date Accepted</b></label>
                        @Html.TextBoxFor(model => model.DateAcc, new { @type = "date", @class = "form-control datetimepicker" })
                    </div>
                    <div class="form-group col-sm-4">
                        <label><b>Budget <span style="color:red;">*</span></b></label>
                        @Html.EditorFor(model => model.Budget, new { htmlAttributes = new { @type = "number", @class = "form-control", Required = true } })
                    </div>
                    <div class="form-group col-sm-4">
                        <label><b>Request Status <span style="color:red;">*</span></b></label>
                        @Html.DropDownListFor(model => model.IDRequestStatus, (SelectList)ViewBag.requests, new { @class = "form-control" })
                    </div>
                    
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-4">
                        <label><b>Requestor Email</b></label>
                        @Html.EditorFor(model => model.RequestorEmail, new { htmlAttributes = new { @type = "email", @class = "form-control" } })
                    </div>
                    <div class="form-group col-sm-4">
                        <label><b>Approved By</b></label>
                        @Html.EditorFor(model => model.ApprovedBy, new { htmlAttributes = new { @type = "text", @class = "form-control" } })
                    </div>
                    <div class="form-group col-sm-4">
                        <label><b>Requested by: <span style="color:red;">*</span></b></label>
                        @Html.EditorFor(model => model.RequestedBy, new { htmlAttributes = new { @class = "form-control", Required = true } })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-4">
                        <label><b>Request</b></label>
                        @Html.TextAreaFor(model => model.Request, new { @class = "form-control", @rows = 5 })
                    </div>
                    <div class="form-group col-sm-4">
                        <label><b>Approver Notes</b></label>
                        @Html.TextAreaFor(model => model.ApproverNotes, new { @class = "form-control", @rows = 5 })
                    </div>
                    <div class="form-group col-sm-4">
                        <label><b>Requestor Notes</b></label>
                        @Html.TextAreaFor(model => model.RequestorNotes, new { @class = "form-control", @rows = 5 })
                    </div>
                </div>
            </div>
        </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-sm cancelButton" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-sm" style="background-color:#444D8E;color:white;">Create</button>
            </div>
        }
    </div>
</div>
