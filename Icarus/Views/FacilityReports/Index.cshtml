@model IEnumerable<Icarus.Models.tblFacilityReport>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .tableheadleft {
        border-top-left-radius: 15px !important;
    }

    .tableheadright {
        border-top-right-radius: 15px !important;
    }

    .activity-holder::-webkit-scrollbar {
        width: 12px; /* width of the entire scrollbar */
        background-color: transparent;
        height: 10px;
    }

    .activity-holder::-webkit-scrollbar-track {
        background: transparent !important; /* color of the tracking area */
    }

    .activity-holder::-webkit-scrollbar-thumb {
        background: transparent; /* color of the scroll thumb */
        border-radius: 20px; /* roundness of the scroll thumb */
        border: 3px solid transparent !important; /* creates padding around scroll thumb */
    }

    .activity-holder {
        height: 75vh;
        overflow-y: auto;
    }

    #activityhead {
        position: sticky;
        top: 0; /* Don't forget this, required for the stickiness */
        background-color: #6C7AE0;
    }
</style>
<script>
    function Delete(id) {
        $("#id").val(id);
        $('#myModal').modal().show();
    }


    function Add() {
        $("#createModal").modal().show();
    }

    function Edit(id) {
        var url = $("#editModal").data("url");
        $.get(url + "/" + id, function (data) {
            $("#editModal").html(data);
            $("#editModal").modal().show();
        });
    }


    $(document).ready(function () {
        document.title = 'Facility Reports';
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

<div class="pl-5 pr-5">
    <div class="d-flex mb-2 mt-2 justify-content-between">
        <input class="form-control col-sm-4" id="myInput" type="search" placeholder="Search" aria-label="Search">
        @if (Session["isPG"].ToString() == "Y" || Session["isADG"].ToString() == "Y")
        {
            <div>
                <a class="btn" style="background-color:#4E58A2;color:white;" onclick="Add()">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    <span>&nbsp;Add Facility Report</span>
                </a>
            </div>
        }
    </div>
    <hr>
    <div class="activity-holder">
        <table class="table table-striped table-hover table-borderless" style="overflow-x: inherit;">
            <thead style="background-color: #6C7AE0; color: white;">
                <tr>
                    <th id="activityhead" class="tableheadleft" scope="col" width="12%">
                        @Html.DisplayNameFor(model => model.ReportDate)
                    </th>
                    <th id="activityhead" scope="col">
                        @Html.DisplayNameFor(model => model.Activity)
                    </th>
                    @if (Session["isPG"].ToString() == "Y" || Session["isADG"].ToString() == "Y")
                    {
                        <th id="activityhead" scope="col" width="10%"> @Html.DisplayNameFor(model => model.PostedBy)</th>
                        <th id="activityhead" class="tableheadright text-center" scope="col">Action</th>
                    }
                    else
                    {
                        <th id="activityhead" class="tableheadright" width="10%" scope="col"> @Html.DisplayNameFor(model => model.PostedBy)</th>
                    }
                </tr>
            </thead>
            <tbody id="myTable">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.ReportDate.ToString("MM/dd/yyyy")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostedBy)
                        </td>
                        @if (Session["isPG"].ToString() == "Y" || Session["isADG"].ToString() == "Y")
                        {

                            <td class="d-flex align-items-center justify-content-center">
                                <button class="btn btn-warning btn-sm mr-1" onclick="Edit(@item.IDFacilityReport)">Edit</button>
                                @if (Session["isADG"].ToString() == "Y")
                                {
                                    <button class="btn btn-danger btn-sm ml-1" type="button" onclick="Delete(@item.IDFacilityReport)">Delete</button>
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-url="@Url.Action("EditPartial","FacilityReports")">
    </div>
    <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        @Html.Partial("_CreatePartial", ViewData["FacReport"])
    </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Confirmation</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this Facility Report?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
                    @using (Html.BeginForm("Delete", "FacilityReports", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="number" class="id" id="id" style="display:none;" name="id" value="" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>