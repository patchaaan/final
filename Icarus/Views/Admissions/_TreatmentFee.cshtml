@model Icarus.Models.tblAdmissionBilling

@{
    ViewBag.Title = "Admission Browse";
}
<style>
    .tableheadleft {
        border-top-left-radius: 15px !important;
    }

    .tableheadright {
        border-top-right-radius: 15px !important;
    }
    .treatment-holder::-webkit-scrollbar {
        width: 12px; /* width of the entire scrollbar */
        background-color: #dddddd;
        height: 10px;
    }

    .treatment-holder::-webkit-scrollbar-track {
        background: #dddddd !important; /* color of the tracking area */
    }

    .treatment-holder::-webkit-scrollbar-thumb {
        background: #808080 !important; /* color of the scroll thumb */
        border-radius: 20px; /* roundness of the scroll thumb */
        border: 3px solid grey !important; /* creates padding around scroll thumb */
    }

    .treatment-holder {
        height: 64vh;
        overflow-y:auto;
    }

    #treatmenthead {
        position: sticky;
        top: 0; /* Don't forget this, required for the stickiness */
        background-color: #6C7AE0;
    }
</style>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

    });
</script>

<div class="col-sm-12 pl-0 pr-0">
    <div class="d-flex mb-2 mt-2 justify-content-between">
        @if (ViewBag.admissionBillingLists == false)
        {
            <p>No Data to search.</p>
        }
        else
        {
            <input class="form-control col-sm-4" id="myInput" type="search" placeholder="Search" aria-label="Search">
        }
        @if (Session["isADG"].ToString() == "Y" || Session["isEDG"].ToString() == "Y" || Session["isAAG"].ToString() == "Y")
        {
            <div>
                <button class="btn" style="background-color:#4E58A2;color:white;" data-toggle="modal" data-target="#treatmentfeeModal">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    <span>&nbsp;Add Admission Bill</span>
                </button>
            </div>
        }
    </div>
    <hr>
    @if (ViewBag.admissionBillingLists == false)
    {
        <div>No Treatment fee record yet.</div>
    }
    else
    {
        <div class="treatment-holder">
            <table class="table table-striped table-hover table-borderless">
                <thead style="background-color: #6C7AE0; color: white;">
                    <tr>
                        <th id="treatmenthead" class="tableheadleft" scope="col">
                            ID AB
                        </th>
                        <th id="treatmenthead" scope="col">
                            Billing Date
                        </th>
                        <th id="treatmenthead" scope="col">
                            Generated Date
                        </th>
                        <th id="treatmenthead" scope="col">
                            Amount
                        </th>
                        <th id="treatmenthead" scope="col">
                            Notes
                        </th>
                        <th id="treatmenthead" class="tableheadright" scope="col">
                            Generated By
                        </th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    @foreach (var item in ViewBag.AdmissionBilling)
                    {
                        var billingDate = item.BillingDate == null ? "" : ((DateTime)item.BillingDate).ToShortDateString();
                        var generatedDate = item.GeneratedDate == null ? "" : ((DateTime)item.GeneratedDate).ToShortDateString();

                        <tr>
                            <td>@item.IDAdmissionBilling</td>
                            <td>@billingDate</td>
                            <td>@generatedDate</td>
                            <td>@item.Amount.ToString("0.00")</td>
                            <td>@item.Notes</td>
                            <td>@item.GeneratedBy</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    <div class="modal fade" id="treatmentfeeModal" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="gridSystemModalLabel">Add Admission Bill</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                @using (Html.BeginForm("CreateTreatmentFee", "Admissions", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.IDAdmission)
                    @Html.HiddenFor(model => model.GeneratedBy)
                    <div class="form">
                        <div class="modal-body">
                            <div class="form-row">
                                <div class="form-group col-sm-4">
                                    @Html.LabelFor(model => model.IDAdmission)
                                    @Html.EditorFor(model => model.IDAdmission, new { htmlAttributes = new { @class = "form-control", Value = Model.IDAdmission, disabled = true } })
                                </div>
                                <div class="form-group col-sm-4">
                                    @Html.LabelFor(model => model.GeneratedBy)
                                    @Html.EditorFor(model => model.GeneratedBy, new { htmlAttributes = new { @class = "form-control generatedBy", Value = ViewBag.generatedBy, disabled = true } })
                                </div>
                                <div class="form-group col-sm-4">
                                    @Html.LabelFor(model => model.GeneratedDate)
                                    @Html.EditorFor(model => model.GeneratedDate, new { htmlAttributes = new { @type = "datetime-local", @class = "form-control" } })
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-4">
                                    @Html.LabelFor(model => model.Amount)
                                    @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @type = "number", @class = "form-control" } })
                                </div>
                                <div class="form-group col-sm-4">
                                    @Html.LabelFor(model => model.BillingDate)
                                    @Html.EditorFor(model => model.BillingDate, new { htmlAttributes = new { @type = "datetime-local", @class = "form-control" } })
                                </div>
                                <div class="form-group col-sm-4">
                                    @Html.LabelFor(model => model.PostedDate)
                                    @Html.EditorFor(model => model.PostedDate, new { htmlAttributes = new { @type = "datetime-local", @class = "form-control" } })
                                </div>

                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-4">
                                    @Html.LabelFor(model => model.Notes)
                                    @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", @rows = 5 })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer ">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                }

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>
