@model IEnumerable<Icarus.Models.tblExpensesChartOfAccount>

@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pl-5 pr-5">
    <div class="d-flex mb-2 mt-2 justify-content-between">
        <input class="form-control col-sm-4" id="myInput" type="search" placeholder="Search" aria-label="Search">
        <div>
            <a class="btn" style="background-color:#4E58A2;color:white;" href="/ExpensesChartOfAccounts/Create">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                <span>&nbsp;Add Accounts</span>
            </a>
        </div>
    </div>
    <hr>
    <div>
        <table class="table table-striped table-hover table-borderless" style="overflow-x: inherit;">
            <thead style="background-color: #6C7AE0; color: white;">
                <tr>
                    <th class="tableheadleft" scope="col">
                        @Html.DisplayNameFor(model => model.AccountCode)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Account)
                    </th>

                    <th scope="col" class="tableheadright">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody id="myTable">
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.AccountCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Account)
                        </td>

                        <td style="display:flex;">
                            <a class="btn btn-warning btn-sm mr-1" href="/ExpensesChartOfAccounts/Edit/@item.IDAccount">Edit</a>
                            <a class="btn btn-danger btn-sm ml-1" href="/ExpensesChartOfAccounts/Delete/@item.IDAccount">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<style>
    .tableheadleft {
        border-top-left-radius: 15px !important;
    }

    .tableheadright {
        border-top-right-radius: 15px !important;
    }
</style>
<script>
    $(document).ready(function () {
        document.title = 'Chart Of Accounts Browse';
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>